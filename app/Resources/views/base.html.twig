            <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('assets/img/logos/50780487_596810034105682_4459185907433472000_n_28I_icon.ico') }}" />
    </head>
    <body data-spy="scroll" data-target=".tm-primary-nav">
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('assets/js/vendor/modernizr-3.5.0.min.js') }}"></script>
            <!--script src="{{ asset('assets/js/vendor/jquery-1.12.4.min.js') }}"></script-->
            <script src="http://code.jquery.com/jquery-3.3.1.min.js"></script>
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBgwgIuDRkO7HlxvpWN-vPePnGVWss5r5g"></script>
            <script src="{{ asset('assets/js/plugins.js') }}"></script>
            <script src="{{ asset('assets/js/main.js') }}"></script>
            <script>
                $("#devis_link").click(function(event){
                    event.preventDefault();
                    window.location.replace("{{ path('homepage') }}#appointment");
                    $('#uname').focus();
                });
                $("#contact_link").click(function(event){
                    event.preventDefault();
                    window.location.replace("{{ path('homepage') }}#contact");
                    $('#name').focus();
                });
            </script>

            <script>
            $(document).ready(function () {
                var gArray = {
                    'chirurgie des seins': [
                        'Augmentation mammaire par prothèse mammaires rondes',
                        'Augmentation mammaire par prothèse mammaires anatomiques',
                        'Augmentation mammaire par lipofilling',
                        'Lifting mammaire',
                        'Réduction mammaire',
                        'Gynécomastie',
                        'Lifting mammaire avec prothèses'
                    ],
                    'chirurgie du visage': [
                        'Lifting cervico-facial',
                        'Lifting malaire',
                        'Lifting frontal',
                        'Lifting complet',
                        'Lipofilling du visage',
                        'Rhinoplastie simple',
                        'Rhinoplastie et septoplastie',
                        'Rhinoplastie ethnique',
                        'Blépharoplastie 2 paupiéres',
                        'Blépharoplastie 4 paupiéres',
                        'L\'implant capillaire par FUE',
                        'Génioplastie',
                        'Génioplastie d\'avancement',
                        'Otoplastie',
                        'Augmentation des lèvres'
                    ],
                    'chirurgie de la silhouette': [
                        'Liposuccion une seule zone (ventre...)',
                        'Liposuccion sur une petite zone (double menton...)',
                        'Liposuccion double menton + mini lifting',
                        'Liposuccion moyenne (sur 3 zones et plus)',
                        'Liposuccion complète (plus de 10 zones)',
                        'Abdominoplastie',
                        'Abdominoplastie + Liposuccion moyenne',
                        'Lifting des bras',
                        'Augmentation des fesses par implants fessiers',
                        'Augmentation des fesses par lipofilling',
                        'Liposuccion moyenne + Lipofilling des seins',
                        'Liposuccion moyenne + Lipofilling des fesses',
                        'Lifting des cuisses'
                    ],
                    'chirurgie intime': [
                        'Nymphoplastie (réduction des lèvres vaginale)',
                        'Pénoplastie d\'élargissement (élargissement du pénis)',
                        'Pénoplastie d\'allongement (allongement du pénis)'
                    ],
                    'chirurgie orthopédique': [
                        'Prothèse totale du genou',
                        'Hernie discale',
                        'Prothèse totale de la hanche',
                        'Hallux Valgus',
                        'Syndrome du canal carpien'
                    ],
                    'chirurgie de l\'obésité': [
                        'Anneau gastrique',
                        'Sleeve gastrectomie',
                        'Bypass'
                    ],
                    'chirurgie capillaire': [
                        'Greffe Capillaire',
                        'Epilation Laser'
                    ],
                    'chirurgie de l\'infertilité': [
                        'Insémination artificielle',
                        'Fécondation in vitro',
                        'Biopsie testiculaire'
                    ],
                    'chirurgie dentaire': [
                        'Implant dentaire',
                        'Pose de facette dentaire',
                        'Blanchiment dentaire'
                    ],
                    'chirurgie ophtalmologie': [
                        'Lasik (les 2 yeux)',
                        'Laser PKR (les 2 yeux)'
                    ]
                };

                $("#devis_typeChirurgie").on('change', function () {

                    var val = $("#devis_typeChirurgie").val();
                    if (val === "Autre") {
                        $('#devis_chirurgie').hide();
                        $('#devis_autreDetails').show();
                    }
                    else {
                        var lArray;
                        $('#devis_chirurgie').show();
                        $('#devis_autreDetails').hide();

                        if (val === "chirurgie des seins") {
                            lArray = gArray['chirurgie des seins'];
                        } else if (val === "chirurgie du visage") {
                            lArray = gArray['chirurgie du visage'];
                        } else if (val === "chirurgie de la silhouette") {
                            lArray = gArray['chirurgie de la silhouette'];
                        } else if (val === "chirurgie intime") {
                            lArray = gArray['chirurgie intime'];
                        } else if (val === "chirurgie orthopédique") {
                            lArray = gArray['chirurgie orthopédique'];
                        } else if (val === "chirurgie de l'obésité") {
                            lArray = gArray['chirurgie de l\'obésité'];
                        } else if (val === "chirurgie capillaire") {
                            lArray = gArray['chirurgie capillaire'];
                        } else if (val === "chirurgie de l'infertilité") {
                            lArray = gArray['chirurgie de l\'infertilité'];
                        } else if (val === "chirurgie dentaire") {
                            lArray = gArray['chirurgie dentaire'];
                        } else if (val === "chirurgie ophtalmologie") {
                            lArray = gArray['chirurgie ophtalmologie'];
                        }
                        $('#devis_chirurgie').find('option').each(function () {
                            $(this).hide();
                            //console.log(gArray['chirurgie des seins']);
                            //console.log(lArray);
                            if(isInArray($(this).val(), lArray)) {
                                $(this).show();
                                //console.log($(this).val());
                            }
                        });
                        $('#devis_chirurgie').val(lArray[0]);
                    }
                });
                $("#devis_typeChirurgie").trigger("change");

                $("#devis_anticidMedicauxExist").on('change', function () {
                    var val = $("#devis_anticidMedicauxExist").val();
                    if (val === "Oui") {
                        $('#devis_anticidMedicaux').show();
                    }
                    else {
                        $('#devis_anticidMedicaux').hide();
                    }
                });
                $("#devis_anticidMedicauxExist").trigger("change");
            });
        </script>
        {% endblock %}
    </body>
</html>
